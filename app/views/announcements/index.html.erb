<header>
  HEADER
</header>

<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3 sidebar">
        <h1>Announcements</h1>

          <% @announcements.each do |a| %>
            <div class="post">
              <div class="title"><%= a.subject %></div>
              <div class="date">Posted on <%= a.created_at.localtime.strftime("%d %B %C%y, %I:%M %p") %></div>
              <div class="content"><%= a.details %></div>
              <div class="buttons">
                <%= link_to 'Show', "#", 'data-target' => "#show_modal_#{a.id}", 'data-toggle' => 'modal' %>     
                <%= link_to 'Edit', "#", 'data-target' => "#edit_modal_#{a.id}", 'data-toggle' => 'modal' %>
                <%= link_to 'Delete', a, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          <% end %>

        <p><%= link_to 'Submit New Announcement', "#", 'data-target' => "#new_modal", 'data-toggle' => 'modal'  %></p>

      </div>
      <div class="col-md-8 offset-md-1">
          <h1>Schedule</h1>
      </div>
    </div>
  </div>

  <!-- Show Modal -->
  <%= render 'show' %>

  <!-- New Modal -->
  <%= render 'new' %>

  

  <!-- Edit Modal -->
  <% @announcements.each do |announcement| %>
    <div class="modal fade" id="edit_modal_<%= announcement.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title">Edit</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <%= render 'edit', announcement: announcement %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
        
</body>
