<h3> Create New Problem Report </h3>

<%= button_to("Back To Problem Report List", problem_reports_path, method: "get", class: "btn btn-secondary") %>
<%= form_tag(problem_reports_path, method: "post") do %>
    <p>
        <b> Name </b>
        <%= current_user.username %>
    </p>
    
    <p>
        <b> Venue </b>
        <%= check_box_tag(:venue_AS8) %>
        <%= label_tag(:venue_AS8, 'AS8') %>
        
        <%= check_box_tag(:venue_YIH) %>
        <%= label_tag(:venue_YIH, 'YIH') %>
    </p>
    
    <p>
        <b> PC Number </b>
        <%= text_field_tag(:computer_number) %>
    </p>
    
    <p>
        <b> Description </b>
        <%= text_area_tag(:description, "", size: "100x10", placeholder: "test", style: "display: inline") %>
    </p>
    
    <p>
        <%= check_box_tag(:is_critical) %>
        <%= label_tag(:is_critical, 'Critical') %>
    </p>
    
    <%= submit_tag("Submit")%>
<% end %>