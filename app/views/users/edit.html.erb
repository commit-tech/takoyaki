
<%= form_with(model: @user) do |f| %>
	<p>
		<%= f.label :email%>
		<%= f.text_field :email%>
	</p>

<fieldset>
<legend>User Roles</legend>
    <% @roles.each do |role| %>
      <%= f.label(role) do %>
       <%= role %>
       <%= hidden_field_tag(role, 0) %>
       <%= check_box_tag(role, 1, @user.has_role?(role)) %>
    <% end %>
  <% end %>
</fieldset>


  <p>
    <%= f.submit "Save"%>
  </p>
 
<% end %>