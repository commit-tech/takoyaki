<div class="container-fluid">
  <div class="col-md-12">
    <div class="schedule-container scrollable">

      <table class="table table-striped-columns">
        <thead>
          <tr>
            <td class="schedule-timings"></td>
            <% @first.to_i.step(@last.to_i, 3600) do |t| %>
            <td class="schedule-timings" colspan="2">
              <div class="schedule-time"><%= Time.at(t).localtime.strftime('%H%M') %></div>
            </td>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% (1..7).each do |i| %><!-- 7.times started from 0, would start week from Monday -->
          <tr>
            <td class="schedule-daynames"><%= Date::DAYNAMES[i % 7] %></td>
            <% @first.to_i.step(@last.to_i, 1800) do |t| %>
              <td></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
