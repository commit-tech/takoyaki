<div class="container">
  <div class="row">
    <div class="box col-sm-12 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <img src="/assets/commit-logo.png" />  
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log In" %>
          </div>
        <% end %>
        <a href="/my/users/password/new">Forgot your password?</a><br />
      </div>
    </div>
  </div>
</div>

<div class="footer">
  <div class="container">  
    <p class="muted text-center col-sm-12 col-md-4 col-md-offset-4">Copyright &copy; 201x-201x NUSSU CommIT Technical Cell</p>
  </div>  
</div>

