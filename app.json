{
  "name": "takoyaki",
  "scripts": {
    "postdeploy": "bundle exec rails db:setup"
  },
  "env": {
    "HEROKU_POSTGRESQL_MAUVE_URL": {
      "required": true
    },
    "HEROKU_POSTGRESQL_WHITE_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAILER_HOST": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
